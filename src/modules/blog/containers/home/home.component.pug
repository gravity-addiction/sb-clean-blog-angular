sb-layout-blog
    
    sb-header(
        backgroundImage='url("assets/img/ron_shipp/16-way-1-bg.jpg")',
        heading='Skydive Or Bust',
        subHeading='Your source for World Skydiving and Indoor Freefall Info',
        [siteHeading]='true'
    )

    sb-demo-info(*ngIf='!isLoggedIn')

    ng-container(
        *ngIf='posts$ | async as posts'
    )
        .container
            .row
                .col-lg-8.col-md-10.mx-auto
                    .post-preview(
                        *ngFor='let post of posts'
                    )
                        a([routerLink]='"blog/" + post.slug')
                            h2.post-title {{post.heading}}
                            h3.post-subtitle {{post.subHeading}}
                                
                        p.post-meta {{post.meta}}
